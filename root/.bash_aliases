# short form of complete ls
alias la="ls -latrh --color=auto"

# clean screen like in DOS
alias cls="clear"

# tailf for short
alias tf="tailf"

# less and to the end, like tailf
alias lf="less +F --follow-name"

# calculate folder and file size, and sort descendingly, with human-readable format. (order by size)
alias obs='du -cksh . | sort -rh'
